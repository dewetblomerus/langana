<header role="banner">
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Langana", root_path, class: "navbar-brand" %>
        </div>
        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav pull-right">
              <% if current_user %>
                <li><%= link_to current_user.first_name, current_user %></li> 
                <li><%= link_to 'Confirm phone number', confirm_user_path(current_user) unless current_user.confirmed_at %></li>
                <li><%= link_to 'Account Settings', edit_user_path(current_user) %></li>
                <li><%= link_to 'Sign Out', session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'Sign In', signin_path %></li>
                <li><%= link_to 'Sign Up', choose_role_path %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>
</header>
